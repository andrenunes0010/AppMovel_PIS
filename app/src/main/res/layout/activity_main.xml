<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_arrow_right"
        android:scaleX="-1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/SignInText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerDivider" />

    <TextView
        android:id="@+id/SignInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/appLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/headerDivider" />

    <!-- Header Divider -->
    <View
        android:id="@+id/headerDivider"
        android:layout_width="350dp"
        android:layout_height="1.5dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/SignInText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo -->
    <!--esta contraint esta a dar erro - app:layout_constraintMarginTop="80dp"-->
    <LinearLayout
        android:id="@+id/logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo_sylvanus_foreground"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sylvanus Inc."
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium" />
    </LinearLayout>

    <!-- Email field -->
    <!--esta contraint esta a dar erro - app:layout_constraintMarginTop="32dp"-->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/login_background"
        android:hint="Email Address"
        android:paddingHorizontal="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="#686767"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/logo_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password field -->
    <!--esta contraint esta a dar erro - app:layout_constraintMarginTop="16dp" -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/login_background"
        android:hint="Password"
        android:paddingHorizontal="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="#686767"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sign-in button -->
    <!--esta contraint esta a dar erro - app:layout_constraintMarginTop="32dp"-->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/green_background"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Forgot password -->
    <!--esta contraint esta a dar erro - app:layout_constraintMarginTop="16dp"-->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Your Password?"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>