<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Header -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/logo_sylvanus_foreground"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerDivider" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sylvanus Inc."
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/appLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/headerDivider" />

    <!-- Header Divider -->
    <View
        android:id="@+id/headerDivider"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Drone Content Section -->
    <ScrollView
        android:id="@+id/droneScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintBottom_toTopOf="@id/footerDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Drone Header -->
            <TextView
                android:id="@+id/droneHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor Sylvanus"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Drone Image -->
            <ImageView
                android:id="@+id/droneImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/forest"
                android:scaleType="centerCrop" />

            <!-- Drone Title -->
            <TextView
                android:id="@+id/droneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fauget T40X"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <!-- Drone Description -->
            <TextView
                android:id="@+id/droneDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- Thumbnails -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/thumbImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teste2"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="60dp" />

                <ImageView
                    android:id="@+id/thumbImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teste3"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer Divider -->
    <View
        android:id="@+id/footerDivider"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/verde3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iconLogOutbtn"
            android:clickable="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_leave"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/iconMenubtn"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_icons"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Grid" />

        <ImageView
            android:id="@+id/iconProfilebtn"
            android:clickable="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="User" />

        <ImageView
            android:id="@+id/iconSystembtn"
            android:clickable="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_system"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
