<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <!-- Dados do Sensor -->
        <TextView
            android:id="@+id/tvSensorDados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Dados do Sensor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_background"
            android:hint="Latitude"
            android:textSize="19sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/writing"
            android:textColorHint="#686767"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/login_background"
            android:hint="Longitude"
            android:textSize="19sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/writing"
            android:textColorHint="#686767"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnObterCoordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_background"
            android:text="OBTER COORDENADAS"
            android:textColor="@color/button_text"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"/>

        <!-- Botão de Submissão -->
        <Button
            android:id="@+id/btnSubmeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_background"
            android:text="ADICIONAR SENSOR"
            android:textColor="@color/button_text"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"/>


    </LinearLayout>

</FrameLayout>