<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.Notifications"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <LinearLayout
            android:id="@+id/goBackBTN"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="7dp"
                android:scaleX="-1"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Voltar"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Header Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/black"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:id="@+id/LayoutUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/fragment_background_thin"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alerta no Sensor Delta-435343"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_exclamation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/fragment_background_thin"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sucess"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensor Delta-435343 instalado"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_exclamation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/fragment_background_thin"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_deactivated"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensor Delta-435343 desativado"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_exclamation" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>